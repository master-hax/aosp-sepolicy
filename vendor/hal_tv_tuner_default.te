type hal_tv_tuner_default, domain;
hal_server_domain(hal_tv_tuner_default, hal_tv_tuner)

type hal_tv_tuner_default_exec, exec_type, vendor_file_type, file_type;
init_daemon_domain(hal_tv_tuner_default)

allow hal_tv_tuner_default ion_device:chr_file r_file_perms;

# Access to /dev/dma_heap/system
allow hal_tv_tuner_default dmabuf_system_heap_device:chr_file r_file_perms;

# Allow servicemanager to notify hal_tv_tuner_default clients status
binder_use(hal_tv_tuner_default)

+# Allow network communication
allow hal_tv_tuner_default proc_net:file { getattr open read };
allow hal_tv_tuner_default node:udp_socket node_bind;
allow hal_tv_tuner_default self:udp_socket { bind connect create getattr getopt read setattr setopt write };
allow hal_tv_tuner_default port:udp_socket name_bind;
allow hal_tv_tuner_default node:tcp_socket node_bind;
allow hal_tv_tuner_default self:tcp_socket { bind connect create getattr getopt read setattr setopt write };
allow hal_tv_tuner_default port:tcp_socket name_connect;